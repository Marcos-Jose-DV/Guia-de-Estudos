<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuiaDeEstudo.Views.ListaDeCategoriaPage"
             Title="ListaDeCategoriaPage"
             xmlns:models="clr-namespace:GuiaDeEstudo.Models">
    <Grid>
        <CollectionView ItemsSource="{Binding Categorias}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Categoria">
                    <VerticalStackLayout>
                        <Border BackgroundColor="Green">
                            <Label Text="{Binding Name}"/>
                        </Border>
                        <Label Text="{Binding ., Converter={}}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>